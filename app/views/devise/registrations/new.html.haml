%h1 Sign up

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
  = devise_error_messages!

  .control-group
    = f.label :email, 'Email', :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'input-xlarge', :placeholder => 'me@gmail.com'

  .control-group
    = f.label :password, 'Password', :class => 'control-label'
    .controls
      = f.password_field :password, :class => 'input-xlarge'

  .control-group
    = f.label :password_confirmation, 'Password (Again)', :class => 'control-label'
    .controls
      = f.password_field :password_confirmation, :class => 'input-xlarge'

  .form-actions
    = f.submit 'Create account', :class => ['btn','btn-primary']

= render :partial => 'links'

= form_for @remittance do |f|
  -if @remittance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@remittance.errors.count, "error")} prohibited this remittance from being saved:"
      %ul
        - @remittance.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id, "From"
    = current_user.email
  .field
    = f.label :recipient_id, "To (Email Address)"

    = f.text_field :recipient_email
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :provider
    = f.text_field :provider
  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
